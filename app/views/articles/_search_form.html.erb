<div class="row mb-5">
  <%= form_with(url: search_path, method: :get, class: "d-inline-flex") do %>
  <div class="input-group">
    <%= text_field_tag :q, nil, class: "form-control" %>
    <div class="input-group-append">
    <%= submit_tag "Search", class: "btn btn-success" %>
    </div>
  </div>

  <% end %>
</div>
