<% if params[:edit].present? %>
  <%= form_with(model: @comment, url: article_comment_path(id: comment.id, article_id: comment.article_id), method: :patch) do |form| %>
    <p>
      <%= form.label :comment %><br>
      <%= form.text_field :comment, value: comment.comment %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
<% else %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.user.username %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.comment %>
  </p>

  <%= link_to 'Destroy Comment', article_comment_path(id: comment.id, article_id: comment.article_id), method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= link_to "Edit", :edit => true %>
<% end %>
