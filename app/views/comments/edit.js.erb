document.querySelector("#comment-<%= @comment.id %>").insertAdjacentHTML('afterend', "<%= j render 'inline_form' %>")
document.querySelector("#comment-<%= @comment.id %>").style.display = 'none'
document.querySelector("#comment-form").style.display = 'none'

if (typeof editedComment == 'undefined') {
  const editedComment = document.querySelector('.edited-comment');
  const updateBtn = document.querySelector('input[type="submit"]');

  function toggleBtn(e) {
    console.log('adasd')
    if(editedComment.value.trim() == "") {
      editedComment.value = ""
      updateBtn.disabled = true
    } else {
      updateBtn.disabled = false
    }
  }
  editedComment.addEventListener('input', toggleBtn)
}
